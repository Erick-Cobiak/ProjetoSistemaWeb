
@{
    String email = Context.Request.Query["email"];
    email = email != null ? email : ""; //O ? é o famoso operador ternário
}

<script>
    function fazer_login() {

        var jsonEnvio = {};
        jsonEnvio.email = document.getElementById("email").value;
        jsonEnvio.senha = document.getElementById("senha").value;

        $.ajax({
            url: "/AreaAdm/Login/",
            data: jsonEnvio,
            type: "post",
            success: function (resp) {
                if (resp == "falha") {
                    alert("opa");
                }
                if (resp == "ok") {
                    document.location.href = "/AreaAdm/PageAdm";
                } else {
                    alert("Usuário ou senha inválidos!");
                }
            }
        });
    }

</script>

<div class="container text-center">
    <div class="row">
        <div class="col">
        </div>
        <div class="col-6">

            <br /><br /><br />
            <h2>
                Login Funcionário
            </h2>
            <br /><br />

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="email" value="@email">
                <label for="floatingInput">Email</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="senha">
                <label for="floatingInput">Senha</label>
            </div>

            <br /><br />

            <button type="button" class="btn btn-primary" onClick="fazer_login()">Login</button>

        </div>
        <div class="col">
        </div>
    </div>
</div>