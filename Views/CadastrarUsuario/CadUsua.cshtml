<script>

    function limpar() {
        document.getElementById("nome").value = "";
        document.getElementById("email").value = "";
        document.getElementById("senha").value = "";
        document.getElementById("contato").value = "";
    }

    function cadastrar() {
        var jsonCad = {};
        jsonCad.nome = document.getElementById("nome").value;
        jsonCad.email = document.getElementById("email").value;
        jsonCad.senha = document.getElementById("senha").value;
        jsonCad.contato = document.getElementById("contato").value;
        limpar();

        $.ajax({
            url: "/CadastrarUsuario/cadastrar/",
            data: jsonCad,
            type: "get",
            success: function (){
                alert("Cadastro realizado com sucesso!!!");
            },
            error: function () {
                alert("Ocorreu um erro ao executar a ação!!!");
            }
        });
    }
</script>

<div class="container text-center">
    <div class="row">
        <div class="col">
        </div>
        <div class="col-6">

            <br /><br /><br />
            <h2>
                Cadastrar Usuário
            </h2>
            <br /><br />

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="nome" placeholder="Nome do responsável">
                <label for="floatingInput">Nome</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="email" placeholder="name@example.com">
                <label for="floatingInput">Email</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="senha" placeholder="1234">
                <label for="floatingInput">Senha</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="contato" placeholder="+000 (00) 0 0000-0000">
                <label for="floatingPassword">Número de contato</label>
            </div>

            <br /><br />

            <button type="button" class="btn btn-primary" onClick="cadastrar()">cadastrar</button>

        </div>
        <div class="col">
        </div>
    </div>
</div>